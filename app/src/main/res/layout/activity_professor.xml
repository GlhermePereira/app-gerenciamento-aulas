<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutProfessor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvProfessorTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Painel do Professor"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#E65100"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnGerenciarHorarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerenciar HorÃ¡rios" />

        <Button
            android:id="@+id/btnVerAgendamentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver Agendamentos"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnSairProfessor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sair"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
